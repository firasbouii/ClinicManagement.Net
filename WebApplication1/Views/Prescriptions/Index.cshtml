@model IEnumerable<WebApplication1.Models.Prescription>

@{
    ViewBag.Title = "Index";
}

<h2 style="font-style: italic; color:#000080;   font-family: 'Comfortaa', cursive;">Prescriptions</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table" style=" font-family: 'Comfortaa', cursive;">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Doctor.DrName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Patient.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.note)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.medicine)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Doctor.DrName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Patient.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.note)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.medicine)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                @Html.ActionLink("Details", "Details", new { id = item.id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.id })
            </td>
        </tr>
    }

</table>
