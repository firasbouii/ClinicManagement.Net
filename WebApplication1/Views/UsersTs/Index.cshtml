@model IEnumerable<WebApplication1.Models.UsersT>

@{
    ViewBag.Title = "Index";
}

<h2 style="font-style: italic; color:#000080;   font-family: 'Comfortaa', cursive;">Users</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table" style=" font-family: 'Comfortaa', cursive;">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.userName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirsName)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.userName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirsName)
            </td>

            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                @Html.ActionLink("Details", "Details", new { id = item.id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.id })
            </td>
        </tr>
    }

</table>
